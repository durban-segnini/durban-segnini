---
layout: base.njk
---

<main>
    <header>
        <h1>Artists</h1>
        
        <nav aria-label="Browse artists by initial">
            <ul role="list">
                <li><button type="button" data-filter="all" aria-current="page">All</button></li>
                <li><button type="button" data-filter="A">A</button></li>
                <li><button type="button" data-filter="B">B</button></li>
                <li><button type="button" data-filter="C">C</button></li>
                <li><button type="button" data-filter="D">D</button></li>
                <li><button type="button" data-filter="E">E</button></li>
                <li><button type="button" data-filter="F">F</button></li>
                <li><button type="button" data-filter="G">G</button></li>
                <li><button type="button" data-filter="H">H</button></li>
                <li><button type="button" data-filter="I">I</button></li>
                <li><button type="button" data-filter="J">J</button></li>
                <li><button type="button" data-filter="K">K</button></li>
                <li><button type="button" data-filter="L">L</button></li>
                <li><button type="button" data-filter="M">M</button></li>
                <li><button type="button" data-filter="N">N</button></li>
                <li><button type="button" data-filter="O">O</button></li>
                <li><button type="button" data-filter="P">P</button></li>
                <li><button type="button" data-filter="Q">Q</button></li>
                <li><button type="button" data-filter="R">R</button></li>
                <li><button type="button" data-filter="S">S</button></li>
                <li><button type="button" data-filter="T">T</button></li>
                <li><button type="button" data-filter="U">U</button></li>
                <li><button type="button" data-filter="V">V</button></li>
                <li><button type="button" data-filter="W">W</button></li>
                <li><button type="button" data-filter="X">X</button></li>
                <li><button type="button" data-filter="Y">Y</button></li>
                <li><button type="button" data-filter="Z">Z</button></li>
            </ul>
        </nav>
    </header>

    {% if collections.artists %}
        <section aria-labelledby="artists-title">
            <h2 id="artists-title" class="sr-only">Artists Directory</h2>
            
            <div id="artists-grid">
                {% for artist in collections.artists %}
                    {% set lastInitial = artist.data.last_name | first | upper %}
                    <article data-last-initial="{{ lastInitial }}">
                        {% if artist.data.portrait %}
                            <img src="{{ artist.data.portrait }}" alt="Portrait of {{ artist.data.name }}" loading="lazy" />
                        {% elif artist.data.works and artist.data.works[0] %}
                            <img src="{{ artist.data.works[0].image }}" alt="Work by {{ artist.data.name }}" loading="lazy" />
                        {% else %}
                            <div>
                                <span>No image available</span>
                            </div>
                        {% endif %}
                        
                        <header>
                            <h3>
                                <a href="{{ artist.url }}">{{ artist.data.name }}</a>
                            </h3>
                        </header>
                        
                        <div>
                            {% if artist.data.year_of_birth and artist.data.year_of_death %}
                                <p><strong>Lifespan:</strong> {{ artist.data.year_of_birth }} - {{ artist.data.year_of_death }}</p>
                            {% elif artist.data.year_of_birth %}
                                <p><strong>Born:</strong> {{ artist.data.year_of_birth }}</p>
                            {% endif %}
                            
                            {% if artist.data.nationality %}
                                <p><strong>Nationality:</strong> {{ artist.data.nationality }}</p>
                            {% endif %}
                            
                            {% if artist.data.short_bio %}
                                <p>{{ artist.data.short_bio }}</p>
                            {% endif %}
                        </div>
                        
                        <nav>
                            <a href="{{ artist.url }}">View Profile</a>
                            {% if artist.data.website %}
                                <a href="{{ artist.data.website }}" target="_blank" rel="noopener">Website</a>
                            {% endif %}
                        </nav>
                    </article>
                {% endfor %}
            </div>
        </section>
    {% else %}
        <section>
            <p>No artists are currently listed. Please check back soon for updates.</p>
        </section>
    {% endif %}
</main>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('[data-filter]');
    const artistArticles = document.querySelectorAll('article[data-last-initial]');
    
    function filterArtists(initial) {
        artistArticles.forEach(article => {
            if (initial === 'all' || article.getAttribute('data-last-initial') === initial) {
                article.style.display = 'block';
            } else {
                article.style.display = 'none';
            }
        });
        
        // Update active button
        filterButtons.forEach(button => {
            button.setAttribute('aria-current', 'false');
        });
        
        const activeButton = document.querySelector(`[data-filter="${initial}"]`);
        if (activeButton) {
            activeButton.setAttribute('aria-current', 'true');
        }
    }
    
    // Add click event listeners to filter buttons
    filterButtons.forEach(button => {
        button.addEventListener('click', function() {
            const filter = this.getAttribute('data-filter');
            filterArtists(filter);
        });
    });
    
    // Initialize with all artists visible
    filterArtists('all');
});
</script>
